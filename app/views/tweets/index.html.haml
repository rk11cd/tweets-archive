%p
  = @tweets.count
  tweets

.pagination= paginate @tweets
- @tweets.each do |tweet|
  %div.tweet
    %img{ :src => tweet.user["profile_image_url"], :width => 48, :height => 48 }
    %a{ :href => "http://twitter.com/" + tweet.user["screen_name"] }= tweet.user["screen_name"]
    %span= tweet.text
.pagination= paginate @tweets
